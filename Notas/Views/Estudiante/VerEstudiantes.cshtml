@model IEnumerable<Notas.Models.EstudianteModel>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>VerEstudiantes</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/js/bootstrap.js"></script>
</head>
<body>
    <div class="table-responsive-sm">
        <table class="table table-hover table-bordered table-striped table-sm">
            <tr class="bg-primary">
                <th style="color: white;">
                    Carné
                </th>
                <th style="color: white;">
                    Nombre del estudiante
                </th>
                <th>

                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr class="" style="text-align: center;">
                    <td>
                        @Html.DisplayFor(modelItem => item.carne)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.nombreCompleto)
                    </td>
                    <td>
                        <a href="@Url.Action("VerEvaluacion", "Evaluacion", new { carne = item.carne })" class="btn btn-primary" role="button">Evaluaciones</a>
                    </td>
                </tr>
            }
        </table>
    </div>
    <p>
        <a href="@Url.Action("CrearEstudiante", "Estudiante")" class="btn btn-primary" role="button">Agregar estudiante</a>
    </p>
</body>
</html>
